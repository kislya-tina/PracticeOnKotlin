<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkest_gray"
    tools:context=".LogRegActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            app:srcCompat="@drawable/mir_dark" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/reg_with_email_or_phone" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_rounded_all_dark"
            android:layout_gravity="center_horizontal"
            android:hint="@string/e_mail_or_phone"
            android:inputType="textEmailAddress|phone"
            android:text=""
            android:textColorHint="@color/light_gray"
            android:textSize="11sp"
            android:textAlignment="center"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_rounded_all_dark"
            android:layout_gravity="center_horizontal"
            android:hint="@string/enter_password"
            android:inputType="textEmailAddress|phone"
            android:text=""
            android:textColorHint="@color/light_gray"
            android:textSize="11sp"
            android:textAlignment="center"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_rounded_all_dark"
            android:layout_gravity="center_horizontal"
            android:hint="@string/repeat_password"
            android:inputType="textEmailAddress|phone"
            android:text=""
            android:textColorHint="@color/light_gray"
            android:textAlignment="center"
            android:textSize="11sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logButt"
            android:layout_width="210dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_corner_light_gray"
            android:text="@string/registration"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>