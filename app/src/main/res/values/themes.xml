<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="warningColor" format="reference"/>
    <style name="Theme.MIR" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="warningColor">@color/red</item>
    </style>

    <!--Стиль для полей ввода-->
    <style name="Theme.MIR.EditText" parent="Theme.MIR">
        <item name="android:background">@drawable/ic_edit_text_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--Стиль для кнопок-->
    <style name="Theme.MIR.Button" parent="Theme.MIR">
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <!--Стиль для кнопки переключения Вход/Регистрация-->
    <style name="Theme.MIR.Button.SignInUpSwitch" parent="Theme.MIR.Button">
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>