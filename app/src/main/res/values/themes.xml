<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="warningColor" format="reference" />

    <style name="Theme.MIR" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="warningColor">@color/red</item>
    </style>

    <!--Стиль для полей ввода-->
    <style name="Theme.MIR.EditText" parent="Theme.MIR">
        <item name="android:background">@drawable/rectangle_reg</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!--Стиль для кнопок-->
    <style name="Theme.MIR.Button" parent="Theme.MIR">
        <item name="android:background">@drawable/button_sign_up</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Стиль для кнопки переключения Вход/Регистрация-->
    <style name="Theme.MIR.Button.SignInUpSwitch" parent="Theme.MIR.Button">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <!--Стиль для кнопок в Main Activity-->
    <style name="Theme.MIR.Buttons" parent="Theme.MIR">
        <item name="android:background">@drawable/button_on_main_activity</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">open_sans</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableEnd">@drawable/navigation</item>
    </style>

    <style name="textStyle" parent="Theme.MIR">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>
</resources>